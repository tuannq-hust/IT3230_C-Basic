% --- Use an image as background: pass only the filename (no full path) ---
% ------ Simple variant: fixed width=\paperwidth
\newcommand{\HUSTUseBackground}[1]{%
  \HUSTBuildAssetPath{#1}%
  \usebackgroundtemplate{\includegraphics[width=\paperwidth]{\HUST@AssetPath}}%
}
% ------ Optional variant: allow passing options to \includegraphics
\newcommand{\HUSTUseBackgroundOpt}[2][]{%
  \HUSTBuildAssetPath{#2}%
  \usebackgroundtemplate{\includegraphics[#1]{\HUST@AssetPath}}%
}
% --- Clear background so subsequent slides revert to the default
\newcommand{\HUSTClearBackground}{%
  \usebackgroundtemplate{}%
}

% --- Insert a brand cover slide (scoped; background does not leak to next slides)
\newcommand{\HUSTInsertBrandSlide}{%
  \begingroup
  \HUSTUseBackground{theme_hust.pdf}
  \begin{frame}[plain]
  \end{frame}
  \endgroup
}
% --- Insert a theme cover slide (scoped; background does not leak to next slides)
